{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "baseUrl": ".",
    "types": [
      "react",
      "react-native"
    ]
  },
  "include": [
    "app/**/*.js",
    "components/**/*.js",
    "screens/**/*.js",
    "services/**/*.js",
    "contexts/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "android",
    "ios"
  ],
  "extends": "./node_modules/expo/tsconfig.base"
}
